@*Page for viewing full-sized images in an album*@
@page "/view-album-item/{albumID}/{id}"
@layout EmptyLayout

@{
    string returnPath = $"/album-view/{albumID}";
    string newPage = $"view-album-item/{albumID}"; //Page wasn't allowed...
    <ViewItem id="@id" MediaList="@mediaList" Page="@newPage" ReturnPath="@returnPath" DateAdded="@C.GetDateAddedToAlbum(C.GetPathFromUuid(id), albumIdInt)" AlbumID="@albumIdInt"/>
}

@code {
    [Parameter]
    public string albumID { get; set; }
    
    [Parameter]
    public string id { get; set; }

    private static List<C.MediaRow> mediaList;
    private static int albumIdInt;

    protected override void OnInitialized()
    {
        mediaList = C.LoadAlbum(Convert.ToInt32(albumID));
        albumIdInt = Convert.ToInt32(albumID);
    }
}