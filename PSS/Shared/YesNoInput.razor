@*Reusable component that allows user to choose yes or no before doing something as a double check.
    Required Parameters:
    1. String Message: What to say to user
*@
@using PSS.Backend
<link href="css/YesNoInput.css" rel="stylesheet">

@{
    <div id="inputDiv">
        <span id="message">@Message</span>
        <div id="buttons">
            <button><span class="material-icons-outlined">close</span><span>No</span></button>
            <button><span class="material-icons-outlined">check</span><span>Yes</span></button>
        </div>
    </div>
}

@code {
    [Parameter, EditorRequired]
    public string Message { get; set; } //https://stackoverflow.com/a/62142640

    [Parameter]
    public EventCallback<string> NoButtonPressed { get; set; }

    [Parameter]
    public EventCallback<string> YesButtonPressed { get; set; }
}

@functions {
    private static void YesBtnClick()
    {

    }
}