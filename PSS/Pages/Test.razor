@*A blank page just for testing stuff*@
@page "/test/{id}"
@using PSS.Backend
@layout EmptyLayout
@*Escaping the '/' is the only way this would work...*@
<MudDatePicker @ref="picker" Disabled="@pickerDisabled" @bind-Date="newDate" Style="Width: 130px" DateFormat="MM\/dd\/yyyy">
    <PickerActions>
        <MudButton OnClick="@(() => picker.Clear())">Clear</MudButton>
        <MudButton OnClick="@(() => picker.Close(false))">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="@(() => picker.Close())">Ok</MudButton>
    </PickerActions>
</MudDatePicker>

<MudItem xs="12" sm="6" md="4">
    <MudTextField @ref="hourText" Disabled="@hourDisabled" @bind-Value="@Hour" Label="@hourLbl" Placeholder="Hour" Variant="Variant.Text" InputMode.numeric></MudTextField>
</MudItem>

<MudItem xs="12" sm="6" md="4">
    <MudTextField @ref="minuteText" Disabled="@minDisabled" @bind-Value="@Minute" Label="@minuteLbl" Placeholder="Minute" Variant="Variant.Text" InputMode.numeric></MudTextField>
</MudItem>

<MudItem xs="12" sm="6" md="4">
    <MudTextField @ref="secondText" Disabled="@secDisabled" @bind-Value="@Second" Label="@secondLbl" Placeholder="Second" Variant="Variant.Text" InputMode.numeric></MudTextField>
</MudItem>

<MudButton StartIcon="@Icons.Material.Filled.Edit" OnClick="@EditBtnClick">Edit</MudButton>

<MudButton @ref="periodButton" Disabled="@periodDisabled" OnClick="@TogglePeriod">@period</MudButton>

<MudButton Disabled="@cancelDisabled" OnClick="@CancelBtnClick">Cancel</MudButton>

<MudButton Disabled="@applyDisabled" OnClick="@UpdateDateTaken">Apply</MudButton>

@code {
    [Parameter]
    public string id { get; set; }

    string hourLbl = "Hour", minuteLbl = "Minute", secondLbl = "Second", period;
    bool editDisabled, pickerDisabled = true, hourDisabled = true, minDisabled = true, secDisabled = true, periodDisabled = true, cancelDisabled = true, applyDisabled = true;

    MudDatePicker picker;
    MudButton periodButton, applyButton;
    MudTextField<int> hourText, minuteText, secondText;

    DateTime? newDate;
    int hour, minute, second;

    int Hour
    {
        get => hour;
        set
        {
            if (value is < 1 or > 12)
            {
                hourLbl = "Please enter a valid hour value (1-12)";
            }
            else
            {
                hourLbl = "Hour";
                hour = value;
            }
        }
    }

    int Minute
    {
        get => minute;
        set
        {
            if (value is < 0 or > 59)
            {
                minuteLbl = "Please enter a valid minute value (0-59)";
            }
            else
            {
                minuteLbl = "Minute";
                minute = value;
            }
        }
    }

    int Second
    {
        get => second;
        set
        {
            if (value is < 0 or > 59)
            {
                secondLbl = "Please enter a valid second value (0-59)";
            }
            else
            {
                secondLbl = "Second";
                second = value;
            }
        }
    }
}

@functions
{
    void TogglePeriod() => period = period == "AM" ? "PM" : "AM";

    protected override void OnInitialized() // = On Page Load https://stackoverflow.com/a/61554490
    {
        newDate = Connection.GetDateTaken(id);
        Hour = (int)(((newDate?.Hour + 11) % 12) + 1); //Get 12 hour time: https://stackoverflow.com/a/1306172
        Minute = (int)newDate?.Minute;
        Second = (int)newDate?.Second;
        period = Connection.GetPeriod(id);
    }

    void EditBtnClick()
    {
        editDisabled = true;
        pickerDisabled = false;
        hourDisabled = false;
        minDisabled = false;
        secDisabled = false;
        periodDisabled = false;
        cancelDisabled = false;
        applyDisabled = false;
    }

    void CancelBtnClick()
    {
        editDisabled = false;
        pickerDisabled = true;
        hourDisabled = true;
        minDisabled = true;
        secDisabled = true;
        periodDisabled = true;
        cancelDisabled = true;
        applyDisabled = true;
        newDate = Connection.GetDateTaken(id);
        Hour = (int)(((newDate?.Hour + 11) % 12) + 1);
        Minute = (int)newDate?.Minute;
        Second = (int)newDate?.Second;
        period = Connection.GetPeriod(id);
    }

    void UpdateDateTaken()
    {
        picker.Close();

        int hour24 = hour;
        if (period == "PM")
            hour24 += 12; //Convert to 24 hour time for adding into database. There is probably a better way to do this...

        Connection.UpdateDateTaken(Connection.GetPathFromUuid(id), new((int)newDate?.Year, (int)newDate?.Month, (int)newDate?.Day, hour24, minute, second));
    }
}