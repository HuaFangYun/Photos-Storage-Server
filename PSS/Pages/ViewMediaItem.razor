@*Page for viewing full-sized images in Index*@
@page "/view/{id}"
@using PSS.Backend
@layout EmptyLayout

<ViewItem id="@id" MediaList="@mediaList" Page="view" ReturnPath="/" DateAdded="@Connection.GetDateAdded(Guid.Parse(id))"/>

@code{
    [Parameter]
    public string id { get; set; }

    private static readonly List<Connection.MediaRow> mediaList = Connection.LoadMediaTable();
}