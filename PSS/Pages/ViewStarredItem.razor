@*Page for viewing full-sized images in Starred*@
@page "/view-starred-item/{id}"
@layout EmptyLayout

@{
    <ViewItem id="@id" MediaList="@starredList" Page="view-starred-item" ReturnPath="starred" DateAdded="@C.GetDateAdded(Guid.Parse(id))" IsAlbum="@false"/>
}

@code {
    [Parameter]
    public string id { get; set; }

    private static readonly List<C.MediaRow> starredList = C.LoadStarred();
}