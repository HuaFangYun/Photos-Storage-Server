@page "/view/{id}"
@using PSS.Backend
@using System.IO
@layout EmptyLayout

    <style>
        .range {
            width: 200px;
            position: absolute;
            right: 20px;
        }
    </style>

    <img class="bigSize" style="height: 100%" src="@Connection.GetPathFromUuid(id)" />

    <!-- Slider to control the image width, only to make demo clearer !-->
    <input type="range" min="100" max="260" value="100" step="5" oninput="document.querySelector('img').style.height = (this.value + '%')" class="range">

    @code {
        [Parameter]
        public string id { get; set; }
    }
